---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

const response = await fetch("https://fakestoreapi.com/products");
const products = await response.json();
---

<Layout title="Store App">
    <main>
        <div class="container-fluid">
            <Header />
            <h1>Products</h1>

            <ul>
                {
                    products.map((product: any) => (
                        <li class="product">
                            <a href={`#`}>
                                <figure>
                                    <img src={product.image} />
                                    <figcaption>
                                        <div class="name">{product.title}</div>
                                        <div class="price">${product.price}</div>
                                    </figcaption>
                                </figure>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </main>
</Layout>

<style lang="scss">
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: flex;
    }
    .name {
        font-weight: 500;
    }

    .price {
        font-size: 90%;
        color: #787878;
    }
    .product a {
        display: block;
        text-decoration: none;
        color: inherit;
    }
    figure img {
        width: 100%;
        height: 200px;
        object-fit: contain;
    }
    figure {
        width: 200px;
        display: flex;
        flex-direction: column;
        margin: 40px;
    }
    figure figcaption {
        text-align: center;
        line-height: 1.6;
    }
</style>
