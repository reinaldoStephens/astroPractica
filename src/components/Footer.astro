---
import { FacebookIcon, InstagramIcon } from "./Icons.jsx";
---

<footer>
    <div class="footer_container">
        <div class="logo footer-item">
            <a class="navbar-brand" href="index.html" rel="noopener noreferrer">
                <h1>Awa<span class="">Boots</span></h1>
            </a>
        </div>

        <nav class="social footer-item">
            <ul class="social-list">
                <li class="social-item">
                    <a rel="noopener noreferrer" href="https://instagram.com/awa_boots" target="_blank" class="social-link">
                        <InstagramIcon />
                    </a>
                </li>
                <li class="social-item">
                    <a rel="noopener noreferrer" href="https://www.facebook.com" target="_blank" class="social-link"
                        ><FacebookIcon /></a
                    >
                </li>
            </ul>
        </nav>
        <div class="copyright footer-item"><p>Awa Boots Â© 2023 All Rights Reserved.</p></div>
    </div>
</footer>

<style>
    footer {
        background-image: linear-gradient(69deg, rgba(85, 236, 219, 1), rgba(212, 148, 255, 1));
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        box-shadow: 0px 0 3px #00000040;
        width: 100%;
        margin-top: auto;
    }

    .footer_container {
        max-width: 1300px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        height: fit-content;
        padding: 1rem;
    }

    .social-list {
        list-style: none;
        display: flex;
        gap: 25px;
        justify-content: center;
        padding-left: 0;
    }

    .copyright {
        text-align: right;
    }

    .footer-item {
        flex-grow: 1;
        flex-shrink: 1;
        flex-basis: 0;
    }

    @media (max-width: 980px) {
        footer {
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
            margin: 2.5rem auto 0px auto;
        }

        .footer_container {
            flex-direction: column;
        }

        .copyright {
            text-align: center;
        }
    }
</style>
