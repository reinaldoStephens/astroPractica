---
import { HomeIcon, ArrowIcon, CartIcon } from "../components/Icons.jsx";

export interface Props {
    title: string;
}
const { title } = Astro.props as Props;
---

<nav aria-label="Breadcrumb">
    <ol role="list" class="list">
        <li>
            <a href="/" aria-label="Link to home page">
                <span class="sr-only">Home</span>
                <HomeIcon />
            </a>
        </li>

        <li><ArrowIcon /></li>

        <li>
            <div>{title}</div>
        </li>
    </ol>
</nav>

<style>
    .list {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 0.5rem;
        font-size: 0.875rem;
        line-height: 1.25rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    li:first-child {
        display: block;
        transition: scale 0.5s ease;
    }

    li:first-child:hover {
        scale: 1.1;
    }

    li:last-child {
        font-size: 0.875rem;
        line-height: 1.25rem;
    }
</style>
