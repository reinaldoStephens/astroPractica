<header class="header_section">
    <nav class="navbar">
        <div class="navbar-brand-container">
            <a class="navbar-brand" href="index.html">
                <span> Fake Store</span>
            </a>

            <div class="open-menu" role="button" aria-label="Open Menu">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <ul class="menu">
            <li><a href="/" class="selected">Home</a></li>
            <li><a href="#shop">Shop</a></li>
            <li><a href="/about">About Us</a></li>
            <li><a href="#contact">Contact Us</a></li>
        </ul>
    </nav>
</header>
<script>
    const menu = document.querySelector(".menu");
    const openMenuBtn = document.querySelector(".open-menu");

    function toogleMenu() {
        menu?.classList.toggle("menu-opened");
    }

    openMenuBtn?.addEventListener("click", () => toogleMenu());

    const closeIcon = document.querySelector(".open-menu");
    closeIcon?.addEventListener("click", () => {
        closeIcon?.classList.toggle("open");

        if (closeIcon?.classList.contains("open")) {
            closeIcon.ariaLabel = "Close menu";
        } else {
            closeIcon.ariaLabel = "Open menu";
        }
    });
</script>
<style>
    .header_section {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .menu {
        display: flex;
        list-style: none;
        border-radius: 10px;
        box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.25);
        padding: 0;
        margin: 0;
        justify-content: center;
    }

    .menu li {
        padding: 0 25px;
        border-radius: 10px;
    }

    .menu a {
        color: var(--menu-text-color);
        font-size: 18px;
        font-weight: 500;
        line-height: 50px;
        position: relative;
    }

    .navbar {
        display: flex;
        justify-content: center;
        flex-direction: column;
        width: 95%;
    }

    .navbar-brand {
        margin: 15px;
    }

    .navbar-brand span {
        font-size: 28px;
        font-weight: bold;
    }

    .navbar-brand-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .menu a:hover {
        color: var(--primary-color);
    }

    .menu li:hover {
        background-color: var(--menu-hover-color);
    }

    .open-menu {
        display: none;
    }

    @media screen and (max-width: 950px) {
        /* menu */
        .header_section {
            width: 100%;
            display: flex;
        }

        .navbar {
            padding: 0.5rem;
        }

        .navbar-brand {
            margin: 5px 0;
        }

        .navbar-brand-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .menu {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            min-width: 200px;
            background-color: var(--text-color-inverse);
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s;
            padding: 1rem;
            display: none;
            margin-top: 1rem;
        }

        .menu li {
            padding: 0 80px;
            border-radius: 10px;
        }

        .menu a {
            line-height: 1.5;
            font-weight: 400;
        }

        .open-menu {
            display: block;
            border: none;
            background: none;
            cursor: pointer;
        }

        .menu-opened {
            opacity: 1;
            display: flex;
            pointer-events: all;
            z-index: 1;
        }

        .menu a::after {
            content: none;
        }

        .menu a:hover,
        .menu a.selected {
        }

        .open-menu {
            width: 50px;
            height: 48px;
            margin-top: 6px;
            position: relative;
            -webkit-transform: rotate(0deg);
            -moz-transform: rotate(0deg);
            -o-transform: rotate(0deg);
            transform: rotate(0deg);
            -webkit-transition: 0.5s ease-in-out;
            -moz-transition: 0.5s ease-in-out;
            -o-transition: 0.5s ease-in-out;
            transition: 0.5s ease-in-out;
            cursor: pointer;
        }

        .open-menu span {
            display: block;
            position: absolute;
            height: 5px;
            width: 100%;
            background: var(--text-color);
            border-radius: 9px;
            opacity: 1;
            left: 0;
            -webkit-transform: rotate(0deg);
            -moz-transform: rotate(0deg);
            -o-transform: rotate(0deg);
            transform: rotate(0deg);
            -webkit-transition: 0.25s ease-in-out;
            -moz-transition: 0.25s ease-in-out;
            -o-transition: 0.25s ease-in-out;
            transition: 0.25s ease-in-out;
        }

        .open-menu span:nth-child(1) {
            top: 0px;
        }

        .open-menu span:nth-child(2) {
            top: 16px;
        }

        .open-menu span:nth-child(3) {
            top: 32px;
        }

        .open-menu.open {
            width: 45px;
        }

        .open-menu.open span:nth-child(1) {
            top: 18px;
            -webkit-transform: rotate(135deg);
            -moz-transform: rotate(135deg);
            -o-transform: rotate(135deg);
            transform: rotate(135deg);
        }

        .open-menu.open span:nth-child(2) {
            opacity: 0;
            left: -60px;
        }

        .open-menu.open span:nth-child(3) {
            top: 18px;
            -webkit-transform: rotate(-135deg);
            -moz-transform: rotate(-135deg);
            -o-transform: rotate(-135deg);
            transform: rotate(-135deg);
        }
    }
</style>
