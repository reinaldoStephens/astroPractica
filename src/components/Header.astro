<script>
    const menu = document.querySelector(".menu");
    const openMenuBtn = document.querySelector(".open-menu");

    function toogleMenu() {
        menu?.classList.toggle("menu-opened");
    }

    openMenuBtn?.addEventListener("click", () => toogleMenu());

    const closeIcon = document.querySelector(".open-menu");
    closeIcon?.addEventListener("click", () => {
        closeIcon?.classList.toggle("open");

        if (closeIcon?.classList.contains("open")) {
            closeIcon.ariaLabel = "Close menu";
        } else {
            closeIcon.ariaLabel = "Open menu";
            console.log("hola");
            menuBackDrop.style.opacity = "0";
            menuBackDrop.style.visibility = "hidden";
            menuBackDrop.style.display = "none";
        }
    });

    const headerSection = document.querySelector(".header_section");
    const listItem = headerSection?.querySelectorAll(".header_section li");
    const menuBackDrop = document.querySelector("#menu-backdrop") as HTMLElement;

    listItem?.forEach((item) => {
        item.addEventListener("mouseenter", () => {
            const { width, height, top, left } = item.getBoundingClientRect();
            menuBackDrop.style.setProperty("--left", `${left}px`);
            menuBackDrop.style.setProperty("--top", `${top + window.scrollY}px`);
            menuBackDrop.style.setProperty("--width", `${width}px`);
            menuBackDrop.style.setProperty("--height", `${height}px`);
            menuBackDrop.style.display = "block";
            menuBackDrop.style.opacity = "1";
            menuBackDrop.style.visibility = "visible";
        });
    });

    headerSection?.addEventListener("mouseleave", () => {
        menuBackDrop.style.opacity = "0";
        menuBackDrop.style.visibility = "hidden";
    });
</script>
<style is:global>
    #menu-backdrop {
        position: absolute;
        background-color: #e1e1e18b;
        border-radius: 0.25rem;
        left: var(--left);
        top: var(--top);
        /* transform: translateX(--left);
        transform: translateY(--top); */
        width: var(--width);
        height: var(--height);

        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 500ms;
        z-index: -10;
    }

    .text-gradient {
        /*linear-gradient(45deg, rgba(85, 236, 219, 1), rgba(212, 148, 255, 1))*/
        background-image: linear-gradient(45deg, rgba(212, 148, 255, 1), rgba(85, 236, 219, 1), #3776ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .header_section {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .menu {
        display: flex;
        list-style: none;
        border-radius: 10px;
        box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.25);
        padding: 0;
        margin: 0;
        justify-content: center;
    }

    .menu li {
        padding: 0 25px;
    }

    .menu a {
        font-size: 18px;
        font-weight: 500;
        line-height: 50px;
    }

    .navbar {
        display: flex;
        justify-content: center;
        flex-direction: column;
        width: 95%;
        position: relative;
    }

    .navbar-brand span {
        font-size: 28px;
        font-weight: bold;
    }

    .navbar-brand-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .open-menu {
        display: none;
    }

    @media screen and (max-width: 950px) {
        #menu-backdrop {
            z-index: 10;
        }

        .menu-opened li {
            z-index: 20;
        }

        /* menu */
        .header_section {
            width: 100%;
            display: flex;
        }

        .navbar {
            padding: 0.5rem;
        }

        .navbar-brand {
            margin: 5px 0;
        }

        .navbar-brand-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .menu {
            flex-direction: column;
            align-items: center;
            min-width: 200px;
            background-color: var(--text-color-inverse);
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s;
            padding: 1rem;
            display: none;
            margin-top: 1rem;
        }

        .menu li {
            padding: 1rem 100px;
            border-radius: 10px;
        }

        .menu a {
            line-height: 1.5;
            font-weight: 400;
        }

        .open-menu {
            display: block;
            border: none;
            background: none;
            cursor: pointer;
        }

        .menu-opened {
            opacity: 1;
            display: flex;
            pointer-events: all;
        }

        .menu a::after {
            content: none;
        }

        .open-menu {
            width: 50px;
            height: 48px;
            margin-top: 6px;
            position: relative;
            -webkit-transform: rotate(0deg);
            -moz-transform: rotate(0deg);
            -o-transform: rotate(0deg);
            transform: rotate(0deg);
            -webkit-transition: 0.5s ease-in-out;
            -moz-transition: 0.5s ease-in-out;
            -o-transition: 0.5s ease-in-out;
            transition: 0.5s ease-in-out;
            cursor: pointer;
        }

        .open-menu span {
            display: block;
            position: absolute;
            height: 5px;
            width: 100%;
            background: var(--text-color);
            border-radius: 9px;
            opacity: 1;
            left: 0;
            -webkit-transform: rotate(0deg);
            -moz-transform: rotate(0deg);
            -o-transform: rotate(0deg);
            transform: rotate(0deg);
            -webkit-transition: 0.25s ease-in-out;
            -moz-transition: 0.25s ease-in-out;
            -o-transition: 0.25s ease-in-out;
            transition: 0.25s ease-in-out;
        }

        .open-menu span:nth-child(1) {
            top: 0px;
        }

        .open-menu span:nth-child(2) {
            top: 16px;
        }

        .open-menu span:nth-child(3) {
            top: 32px;
        }

        .open-menu.open {
            width: 45px;
        }

        .open-menu.open span:nth-child(1) {
            top: 18px;
            -webkit-transform: rotate(135deg);
            -moz-transform: rotate(135deg);
            -o-transform: rotate(135deg);
            transform: rotate(135deg);
        }

        .open-menu.open span:nth-child(2) {
            opacity: 0;
            left: -60px;
        }

        .open-menu.open span:nth-child(3) {
            top: 18px;
            -webkit-transform: rotate(-135deg);
            -moz-transform: rotate(-135deg);
            -o-transform: rotate(-135deg);
            transform: rotate(-135deg);
        }
    }
</style>
