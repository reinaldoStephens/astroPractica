<header class="header_section">
    <nav class="navbar">
        <div class="navbar-brand-container">
            <a class="navbar-brand" href="index.html">
                <span> Fake Store</span>
            </a>
            <button class="open-menu" aria-label="Abrir menú">
                <img src="img/burger_menu.svg" alt="Abrir menú" />
            </button>
        </div>
        <ul class="menu">
            <button class="close-menu" aria-label="Cerrar menú">
                <img src="img/close_icon.svg" alt="Cerrar menú" />
            </button>
            <li><a href="#home" class="selected">Home</a></li>
            <li><a href="#shop">Shop</a></li>
            <li><a href="#whyus">Why Us</a></li>
            <li><a href="#contact">Contact Us</a></li>
        </ul>
    </nav>
</header>
<script>
    const menu = document.querySelector(".menu");
    const openMenuBtn = document.querySelector(".open-menu");
    const closeMenuBtn = document.querySelector(".close-menu");

    function toogleMenu() {
        menu?.classList.toggle("menu-opened");
    }

    openMenuBtn?.addEventListener("click", () => toogleMenu());
    closeMenuBtn?.addEventListener("click", () => toogleMenu());
</script>
<style>
    .header_section {
        min-height: 3rem;
        width: 100%;

        display: flex;
        justify-content: center;
    }

    .menu {
        display: flex;
        margin: 0;
        list-style: none;
        display: none;
    }

    .menu li {
        padding: 5px 25px;
        border-radius: 5px;
    }

    .menu a {
        color: var(--menu-text-color);
        font-size: 18px;
        font-weight: 500;
        line-height: 50px;
        text-transform: capitalize;
        position: relative;
    }

    .navbar {
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    .navbar-brand span {
        font-size: 28px;
        font-weight: bold;
    }

    .navbar-brand-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .menu a::after {
        content: "";
        background-color: var(--secondary-color);
        position: absolute;
        left: 0;
        top: calc(100% + 4px);
        width: 100%;
        height: 4px;

        opacity: 0;
        transition: opacity 0.3s;
    }

    .menu a:hover {
        color: var(--primary-color);
    }

    .menu li:hover {
        background-color: var(--menu-hover-color);
    }

    .menu a.selected::after,
    .menu a:hover::after {
        opacity: 0.8;
    }

    .open-menu,
    .close-menu {
        display: none;
    }

    @media screen and (max-width: 950px) {
        /* menu */
        .navbar {
            padding: 2rem;
            width: 100%;
        }

        .navbar-brand-container {
            justify-content: space-between;
        }

        .menu {
            flex-direction: column;
            align-items: center;
            position: relative;
            min-width: 200px;
            height: 100%;
            background-color: var(--text-color-inverse);
            overflow: auto;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s;
            border-radius: 10px;
            box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.25);
        }

        .menu a {
            line-height: 70px;
            font-size: 25px;
        }

        .open-menu,
        .close-menu {
            display: block;
            border: none;
            background: none;
            cursor: pointer;
        }

        .close-menu {
            align-self: flex-end;
            padding: 20px 15px;
        }

        .menu-opened {
            opacity: 1;
            display: flex;
            pointer-events: all;
            z-index: 1;
        }

        .menu a::after {
            content: none;
        }

        .menu a:hover,
        .menu a.selected {
        }
    }
</style>
