---
import "../components/css/cart.scss";

import { Cart } from "../components/Cart.jsx";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import awaLogo from "../img/logo/awaLogo.webp";

export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Awa Store" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/webp" href={awaLogo.src} />
        <meta name="generator" content={Astro.generator} />
        <meta name="robots" content="index, follow" />
        <title>{title}</title>
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.min.css" />
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content="Find your Undercover boots in Awa Store" />
        <meta property="og:url" content="https://awa-store-app.web.app/" />
        <meta property="og:image" content={awaLogo.src} />
        <meta property="og:locale" content="es_ES" />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Awa Boots" />
    </head>
    <body>
        <Header transition:persist="header" />
        <Cart client:only="react" transition:persist="cart" />
        <main>
            <slot />
        </main>
        <Footer />
        <style is:global lang="scss">
            :root {
                --menu-text-color: #514f4f;
                --menu-hover-color: #f4f5f6;
                --theme-color: white;
                --primary-color: #124f88;
                --secondary-color: #9651ec;
                --text-color-inverse: white;
                --text-color: black;
                --navbar-shallow-color: #e5e5e5;
                --menu-mobile-background-color: #3a4460;
                --home-catolog-color: #7bbfca;

                --accent: 136, 58, 234;
                --accent-light: 224, 204, 250;
                --accent-dark: 49, 10, 101;
                --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);

                font-size: 1.1em;

                --nav-height: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
            }

            body {
                font-family: "Montserrat", sans-serif;
                background-color: var(--theme-color);
                color: var(--text-color);
                margin-top: 0;
                height: 100%;
                min-height: 100vh;
                min-height: 100dvh;
                display: flex;
                flex-direction: column;
                scrollbar-gutter: stable;
            }

            main {
                margin: 2rem auto;
                width: 94%;
                max-width: 2000px;
            }

            .layout_padding {
                padding-top: 90px;
                padding-bottom: 90px;
            }

            a {
                text-decoration: none;
                color: inherit;
            }

            .social-list svg {
                height: 50px;
            }

            .social-list svg:hover {
                scale: 1.1;
            }
        </style>
    </body>
</html>
