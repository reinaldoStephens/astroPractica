---
import BaseLayout from "./Layout.astro";

export interface Props {
    title?: string;
    message?: string;
}

Astro.response.status = 404;

const defaultTitle = "Page not found";

const { title = defaultTitle, message = defaultTitle } = Astro.props as Props;
---

<BaseLayout title={title}>
    <div class="container">
        <span>404</span>
        <h1>{message}</h1>
        <a href={"/"}>
            Go back home
            <span aria-hidden="true"> &rarr;</span>
        </a>
    </div>
</BaseLayout>

<style>
    .container {
        display: grid;
        justify-content: center;
        text-align: center;
        max-width: 1536px;
    }

    .container span {
        font-size: 3.75rem;
        font-weight: 700;
        line-height: 1;
    }

    .container h1 {
        font-size: 1.25rem;
        line-height: 1.75rem;
        margin-top: 1rem;
        font-weight: inherit;
    }

    .container a {
        font-weight: 600;
        margin-top: 1.5rem;
        text-decoration: inherit;
    }
</style>
